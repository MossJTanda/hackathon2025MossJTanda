<div class="min-h-screen bg-gray-50 pb-6">
  <!-- Header -->
  <div class="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-8">
    <div class="flex items-center mb-4">
      <%= link_to events_path, class: "mr-3" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold flex-1"><%= @event.name %></h1>
    </div>
    <% if @event.description.present? %>
      <p class="text-red-100"><%= @event.description %></p>
    <% end %>
  </div>

  <div class="px-4 -mt-4">
    <!-- Event Details Card -->
    <div class="bg-white rounded-lg shadow p-4 mb-4">
      <div class="grid grid-cols-2 gap-4 text-center">
        <div>
          <div class="text-2xl font-bold text-red-600"><%= @participants.count %></div>
          <div class="text-xs text-gray-600">Participants</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-red-600"><%= @event.budget&.to_i || '--' %></div>
          <div class="text-xs text-gray-600">Budget ($)</div>
        </div>
      </div>
      <% if @event.event_date %>
        <div class="mt-4 pt-4 border-t border-gray-200 text-center">
          <div class="text-sm text-gray-600">Event Date</div>
          <div class="font-bold text-gray-800"><%= @event.event_date.strftime('%B %d, %Y') %></div>
        </div>
      <% end %>
    </div>

    <!-- Your Assignment (if generated) -->
    <% if @receiver %>
      <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 mb-4 text-white">
        <div class="text-center">
          <div class="text-sm opacity-90 mb-2">üéÅ You're buying for</div>
          <div class="text-3xl font-bold"><%= @receiver.name %></div>
          <div class="text-sm opacity-75 mt-2"><%= @receiver.email %></div>
        </div>
      </div>
    <% elsif @is_participant && !@event.assignments_generated %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-yellow-600 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="text-sm text-yellow-800">
            <strong>Assignments pending</strong><br/>
            The event creator will generate assignments soon.
          </div>
        </div>
      </div>
    <% end %>

    <!-- Action Buttons (Creator Only) -->
    <% if @is_creator %>
      <div class="bg-white rounded-lg shadow p-4 mb-4">
        <h3 class="font-bold text-gray-800 mb-3">Manage Event</h3>
        <div class="space-y-2">
          <% if @event.can_generate_assignments? %>
            <%= button_to generate_assignments_event_path(@event), class: "w-full bg-green-600 text-white py-3 rounded-lg font-medium hover:bg-green-700 transition-colors" do %>
              üé≤ Generate Assignments
            <% end %>
          <% elsif @event.assignments_generated %>
            <%= button_to reset_assignments_event_path(@event), data: { confirm: 'Are you sure? This will clear all assignments.' }, class: "w-full bg-orange-600 text-white py-3 rounded-lg font-medium hover:bg-orange-700 transition-colors" do %>
              üîÑ Reset Assignments
            <% end %>
          <% else %>
            <div class="text-center text-sm text-gray-500 py-3 bg-gray-50 rounded-lg">
              Need at least 3 participants to generate
            </div>
          <% end %>

          <%= link_to edit_event_path(@event), class: "block w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors text-center" do %>
            ‚úèÔ∏è Edit Event
          <% end %>

          <%= button_to event_path(@event), method: :delete, data: { confirm: 'Are you sure? This will delete the event permanently.' }, class: "w-full bg-red-600 text-white py-3 rounded-lg font-medium hover:bg-red-700 transition-colors" do %>
            üóëÔ∏è Delete Event
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Participants List -->
    <div class="bg-white rounded-lg shadow p-4 mb-4">
      <div class="flex justify-between items-center mb-3">
        <h3 class="font-bold text-gray-800">Participants (<%= @participants.count %>)</h3>
      </div>

      <div class="space-y-2">
        <% @participants.each do |participant| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center flex-1">
              <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                <%= participant.name.first.upcase %>
              </div>
              <div>
                <div class="font-medium text-gray-800"><%= participant.name %></div>
                <div class="text-xs text-gray-500"><%= participant.email %></div>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <% if participant == @event.created_by %>
                <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full">Host</span>
              <% end %>
              <% if @is_creator && !@event.assignments_generated %>
                <%= link_to event_edit_participant_blocks_path(@event, participant), class: "text-red-600 hover:text-red-700" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Add Participant (Creator Only) -->
      <% if @is_creator && !@event.assignments_generated %>
        <button onclick="openAddParticipantModal()" class="w-full mt-4 bg-red-600 text-white py-3 rounded-lg font-medium hover:bg-red-700 transition-colors">
          + Add Participant
        </button>
      <% end %>
    </div>

  </div>
</div>

<!-- Add Participant Modal -->
<div id="add-participant-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg w-full max-w-md max-h-[80vh] flex flex-col">
    <!-- Modal Header -->
    <div class="flex items-center justify-between p-4 border-b border-gray-200">
      <h3 class="text-lg font-bold text-gray-800">Add Participant</h3>
      <button onclick="closeAddParticipantModal()" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Search Input -->
    <div class="p-4 border-b border-gray-200">
      <input type="text"
             id="modal-search-input"
             placeholder="Search by name or username..."
             class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
             autocomplete="off"
             oninput="filterModalUsers(this.value)">
    </div>

    <!-- User List -->
    <div class="flex-1 overflow-y-auto">
      <% User.where.not(id: @participants.pluck(:id)).order(:username).each do |user| %>
        <div class="modal-user-option px-4 py-3 hover:bg-gray-50 cursor-pointer border-b border-gray-100"
             data-username="<%= user.username %>"
             data-user-id="<%= user.id %>"
             onclick="selectModalUser('<%= user.username %>')">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
              <%= user.name.first.upcase %>
            </div>
            <div>
              <div class="font-medium text-gray-800"><%= user.name %></div>
              <div class="text-xs text-gray-500">@<%= user.username %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Footer with info -->
    <div class="p-4 bg-gray-50 border-t border-gray-200">
      <p class="text-xs text-gray-600 text-center">
        üí° Don't see them? Type any username in the search to create a new account!
      </p>
    </div>
  </div>
</div>

<!-- Hidden form for submission -->
<%= form_with url: event_participants_path(@event), method: :post, id: "add-participant-form", class: "hidden" do |f| %>
  <%= text_field_tag :username, nil, id: "hidden-username-input" %>
<% end %>

<script>
function openAddParticipantModal() {
  const modal = document.getElementById('add-participant-modal');
  modal.classList.remove('hidden');
  // Focus search input
  setTimeout(() => {
    document.getElementById('modal-search-input').focus();
  }, 100);
  // Reset search
  document.getElementById('modal-search-input').value = '';
  filterModalUsers('');
}

function closeAddParticipantModal() {
  const modal = document.getElementById('add-participant-modal');
  modal.classList.add('hidden');
}

function selectModalUser(username) {
  // Set username in hidden form
  document.getElementById('hidden-username-input').value = username;
  // Submit form
  document.getElementById('add-participant-form').requestSubmit();
  // Close modal
  closeAddParticipantModal();
}

function filterModalUsers(searchTerm) {
  const options = document.querySelectorAll('.modal-user-option');
  const term = searchTerm.toLowerCase();

  if (!searchTerm) {
    // Show all if empty
    options.forEach(option => {
      option.classList.remove('hidden');
    });
    return;
  }

  options.forEach(option => {
    const username = option.dataset.username.toLowerCase();
    const name = option.querySelector('.font-medium').textContent.toLowerCase();

    if (username.includes(term) || name.includes(term)) {
      option.classList.remove('hidden');
    } else {
      option.classList.add('hidden');
    }
  });
}

// Close modal when clicking outside
document.addEventListener('click', function(event) {
  const modal = document.getElementById('add-participant-modal');
  if (modal && event.target === modal) {
    closeAddParticipantModal();
  }
});

// Allow typing new username and pressing Enter
document.getElementById('modal-search-input')?.addEventListener('keypress', function(event) {
  if (event.key === 'Enter') {
    const searchValue = this.value.trim();
    if (searchValue) {
      selectModalUser(searchValue);
    }
  }
});
</script>
