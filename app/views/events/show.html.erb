<div class="min-h-screen bg-gray-50 pb-6">
  <!-- Header -->
  <div class="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-8">
    <div class="flex items-center mb-4">
      <%= link_to events_path, class: "mr-3" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold flex-1"><%= @event.name %></h1>
    </div>
    <% if @event.description.present? %>
      <p class="text-red-100"><%= @event.description %></p>
    <% end %>
  </div>

  <div class="px-4 -mt-4">
    <!-- Event Details Card -->
    <div class="bg-white rounded-lg shadow p-4 mb-4">
      <div class="grid grid-cols-2 gap-4 text-center">
        <div>
          <div class="text-2xl font-bold text-red-600"><%= @participants.count %></div>
          <div class="text-xs text-gray-600">Participants</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-red-600"><%= @event.budget&.to_i || '--' %></div>
          <div class="text-xs text-gray-600">Budget ($)</div>
        </div>
      </div>
      <% if @event.event_date %>
        <div class="mt-4 pt-4 border-t border-gray-200 text-center">
          <div class="text-sm text-gray-600">Event Date</div>
          <div class="font-bold text-gray-800"><%= @event.event_date.strftime('%B %d, %Y') %></div>
        </div>
      <% end %>
    </div>

    <!-- Your Assignment (if generated) -->
    <% if @receiver %>
      <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 mb-4 text-white">
        <div class="text-center">
          <div class="text-sm opacity-90 mb-2">ğŸ You're buying for</div>
          <div class="text-3xl font-bold"><%= @receiver.name %></div>
          <div class="text-sm opacity-75 mt-2"><%= @receiver.email %></div>
        </div>
      </div>
    <% elsif @is_participant && !@event.assignments_generated %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-yellow-600 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="text-sm text-yellow-800">
            <strong>Assignments pending</strong><br/>
            The event creator will generate assignments soon.
          </div>
        </div>
      </div>
    <% end %>

    <!-- Action Buttons (Creator Only) -->
    <% if @is_creator %>
      <div class="bg-white rounded-lg shadow p-4 mb-4">
        <h3 class="font-bold text-gray-800 mb-3">Manage Event</h3>
        <div class="space-y-2">
          <% if @event.can_generate_assignments? %>
            <%= button_to generate_assignments_event_path(@event), class: "w-full bg-green-600 text-white py-3 rounded-lg font-medium hover:bg-green-700 transition-colors" do %>
              ğŸ² Generate Assignments
            <% end %>
          <% elsif @event.assignments_generated %>
            <%= button_to reset_assignments_event_path(@event), data: { confirm: 'Are you sure? This will clear all assignments.' }, class: "w-full bg-orange-600 text-white py-3 rounded-lg font-medium hover:bg-orange-700 transition-colors" do %>
              ğŸ”„ Reset Assignments
            <% end %>
          <% else %>
            <div class="text-center text-sm text-gray-500 py-3 bg-gray-50 rounded-lg">
              Need at least 3 participants to generate
            </div>
          <% end %>

          <%= link_to edit_event_path(@event), class: "block w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors text-center" do %>
            âœï¸ Edit Event
          <% end %>

          <%= button_to event_path(@event), method: :delete, data: { confirm: 'Are you sure? This will delete the event permanently.' }, class: "w-full bg-red-600 text-white py-3 rounded-lg font-medium hover:bg-red-700 transition-colors" do %>
            ğŸ—‘ï¸ Delete Event
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Participants List -->
    <div class="bg-white rounded-lg shadow p-4 mb-4">
      <div class="flex justify-between items-center mb-3">
        <h3 class="font-bold text-gray-800">Participants (<%= @participants.count %>)</h3>
      </div>

      <div class="space-y-2">
        <% @participants.each do |participant| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center flex-1">
              <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                <%= participant.name.first.upcase %>
              </div>
              <div>
                <div class="font-medium text-gray-800"><%= participant.name %></div>
                <div class="text-xs text-gray-500"><%= participant.email %></div>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <% if participant == @event.created_by %>
                <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full">Host</span>
              <% end %>
              <% if @is_creator && !@event.assignments_generated %>
                <%= action_button "Blocks", event_edit_participant_blocks_path(@event, participant), color: :orange %>
                <% unless participant == @event.created_by %>
                  <%= action_button "Remove", event_participant_path(@event, participant), color: :red, method: :delete, data: { confirm: "Remove #{participant.name} from this event?" } %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Add Participant (Creator Only) -->
      <% if @is_creator && !@event.assignments_generated && @has_available_users %>
        <%= link_to event_add_participant_path(@event), class: "block w-full mt-4 bg-red-600 text-white py-3 rounded-lg font-medium hover:bg-red-700 transition-colors text-center" do %>
          + Add Participant
        <% end %>
      <% end %>
    </div>

  </div>
</div>
