<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-8">
    <div class="flex items-center">
      <%= link_to event_path(@event), class: "mr-3" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold">Edit Event</h1>
    </div>
  </div>

  <!-- Form -->
  <div class="px-4 py-6">
    <%= form_with model: @event, class: "space-y-4" do |f| %>
      <div class="bg-white rounded-lg shadow p-6 space-y-4">
        <div>
          <%= f.label :name, "Event Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
          <% if @event.errors[:name].any? %>
            <p class="text-red-600 text-sm mt-1"><%= @event.errors[:name].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description, rows: 3, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :event_date, "Event Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :event_date, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
          <% if @event.errors[:event_date].any? %>
            <p class="text-red-600 text-sm mt-1"><%= @event.errors[:event_date].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :budget, "Budget per person ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :budget, step: 0.01, min: 0, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="flex gap-3">
        <%= link_to event_path(@event), class: "flex-1 bg-gray-200 text-gray-700 py-3 rounded-lg font-medium hover:bg-gray-300 transition-colors text-center" do %>
          Cancel
        <% end %>
        <%= f.submit "Save Changes", class: "flex-1 bg-red-600 text-white py-3 rounded-lg font-medium hover:bg-red-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
