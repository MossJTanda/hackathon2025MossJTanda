<div class="max-w-2xl mx-auto px-4 py-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">ğŸ„ Friends ğŸ„</h1>
    <div class="flex space-x-2">
      <div class="relative inline-block">
        <%= link_to friend_requests_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg font-semibold text-sm hover:bg-gray-700 transition-colors border-2 border-gray-700" do %>
          ğŸ„ Requests
        <% end %>
        <% if pending_friend_requests_count > 0 %>
          <span class="absolute -top-1 -right-1 bg-red-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold"><%= pending_friend_requests_count %></span>
        <% end %>
      </div>
      <%= link_to new_friend_path, class: "bg-red-600 text-white px-4 py-2 rounded-lg font-semibold text-sm hover:bg-red-700 transition-colors border-2 border-red-700" do %>
        ğŸ„ Add Friend
      <% end %>
    </div>
  </div>

  <!-- Friends List -->
  <% if @friends.any? %>
    <div class="bg-white rounded-lg shadow divide-y divide-gray-200">
      <% @friends.each do |friend| %>
        <div class="px-4 py-3 flex items-center justify-between hover:bg-gray-50 transition-colors">
          <div class="flex items-center space-x-3 flex-1">
            <div class="bg-red-100 rounded-full p-2">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-gray-900"><%= friend.username %></p>
            </div>
          </div>
          <%= button_to friend_path(friend), method: :delete, data: { turbo_confirm: "Remove #{friend.username} from your friends?" }, class: "bg-red-600 text-white px-3 py-1.5 rounded-lg text-sm font-semibold hover:bg-red-700 transition-colors border-2 border-red-700" do %>
            Remove
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <div class="text-6xl mb-4">ğŸ„</div>
      <p class="text-gray-500 mb-4">You haven't added any friends yet</p>
      <%= link_to new_friend_path, class: "inline-block bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition-colors border-2 border-red-700" do %>
        ğŸ„ Add Your First Friend
      <% end %>
    </div>
  <% end %>
</div>
