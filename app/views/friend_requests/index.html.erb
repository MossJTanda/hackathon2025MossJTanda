<div class="max-w-2xl mx-auto px-4 py-6">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to friends_path, class: "inline-flex items-center text-red-600 hover:text-red-700 font-semibold mb-4" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Friends
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900">ðŸŽ„ Friend Requests ðŸŽ„</h1>
  </div>

  <!-- Received Requests Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-3">Received Requests</h2>
    <% if @pending_requests.any? %>
      <div class="bg-white rounded-lg shadow divide-y divide-gray-200">
        <% @pending_requests.each do |request| %>
          <div class="px-4 py-3">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center space-x-3 flex-1">
                <div class="bg-red-100 rounded-full p-2">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900"><%= request.requester.username %></p>
                  <p class="text-xs text-gray-500">Sent <%= time_ago_in_words(request.created_at) %> ago</p>
                </div>
              </div>
            </div>
            <div class="flex space-x-2">
              <%= button_to "ðŸŽ„ Accept", accept_friend_request_path(request), class: "flex-1 bg-green-600 text-white px-3 py-1.5 rounded-lg text-sm font-semibold hover:bg-green-700 transition-colors border-2 border-green-700" %>
              <%= button_to "ðŸŽ„ Decline", decline_friend_request_path(request), class: "flex-1 bg-gray-600 text-white px-3 py-1.5 rounded-lg text-sm font-semibold hover:bg-gray-700 transition-colors border-2 border-gray-700" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <p class="text-gray-500">No pending friend requests</p>
      </div>
    <% end %>
  </div>

  <!-- Sent Requests Section -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-3">Sent Requests</h2>
    <% if @sent_requests.any? %>
      <div class="bg-white rounded-lg shadow divide-y divide-gray-200">
        <% @sent_requests.each do |request| %>
          <div class="px-4 py-3 flex items-center justify-between hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3 flex-1">
              <div class="bg-gray-100 rounded-full p-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900"><%= request.recipient.username %></p>
                <p class="text-xs text-gray-500">Sent <%= time_ago_in_words(request.created_at) %> ago</p>
              </div>
            </div>
            <%= button_to friend_request_path(request), method: :delete, data: { turbo_confirm: "Cancel request to #{request.recipient.username}?" }, class: "bg-gray-600 text-white px-3 py-1.5 rounded-lg text-sm font-semibold hover:bg-gray-700 transition-colors border-2 border-gray-700" do %>
              Cancel
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <p class="text-gray-500">No pending sent requests</p>
      </div>
    <% end %>
  </div>
</div>
