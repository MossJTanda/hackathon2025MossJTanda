<div class="min-h-screen bg-gradient-to-br from-green-50 via-white to-red-50 flex items-center justify-center px-4 relative overflow-hidden">
  <!-- Decorative Christmas Elements - Hidden on mobile, shown on larger screens -->
  <div class="hidden md:block absolute top-10 left-10 text-6xl animate-pulse pointer-events-none">ğŸ„</div>
  <div class="hidden md:block absolute top-20 right-16 text-5xl animate-bounce pointer-events-none" style="animation-delay: 0.5s;">ğŸ¬</div>
  <div class="hidden md:block absolute bottom-20 left-20 text-5xl animate-pulse pointer-events-none" style="animation-delay: 1s;">ğŸ</div>
  <div class="hidden md:block absolute bottom-10 right-10 text-6xl animate-bounce pointer-events-none">â­</div>
  <div class="hidden md:block absolute top-1/3 left-5 text-4xl animate-pulse pointer-events-none" style="animation-delay: 1.5s;">ğŸ­</div>
  <div class="hidden md:block absolute top-1/2 right-5 text-4xl animate-pulse pointer-events-none" style="animation-delay: 0.8s;">â„ï¸</div>

  <!-- Signup Card -->
  <div class="w-full max-w-md mx-auto relative z-10" style="margin-top: -10vh;">
    <div class="bg-white rounded-2xl shadow-2xl p-8 border-4 border-green-200">
      <!-- Header with Christmas Tree -->
      <div class="text-center mb-6">
        <div class="text-6xl mb-3 animate-bounce">ğŸ„</div>
        <h1 class="text-3xl font-bold text-green-700 mb-2">Welcome!</h1>
        <p class="text-gray-600">Just pick a username to get started</p>
      </div>

      <!-- Decorative Divider -->
      <div class="flex items-center mb-6">
        <div class="flex-1 border-t-2 border-green-200"></div>
        <span class="px-3 text-2xl">ğŸ…</span>
        <div class="flex-1 border-t-2 border-green-200"></div>
      </div>

      <%= form_with(model: @user, class: "space-y-4") do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border-2 border-red-300 text-red-800 px-4 py-3 rounded-lg">
            <h2 class="font-bold mb-2">âš ï¸ Oops! <%= pluralize(@user.errors.count, "error") %> found:</h2>
            <ul class="list-disc list-inside text-sm">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :username, class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all", placeholder: "santa_claus", required: true, autocomplete: "off" %>
          <p class="text-xs text-gray-500 mt-1">Choose a unique username - this is how you'll login!</p>
        </div>

        <div>
          <%= form.label :name, "Display Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all", placeholder: "Santa Claus", required: true %>
        </div>

        <div>
          <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :email, class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all", placeholder: "your.email@example.com", required: true %>
          <p class="text-xs text-gray-500 mt-1">Used for event notifications</p>
        </div>

        <div class="pt-2">
          <%= form.submit "ğŸ„ Create Account", class: "w-full bg-gradient-to-r from-green-600 to-green-700 text-white py-3 rounded-lg font-bold text-lg shadow-lg hover:from-green-700 hover:to-green-800 transition-all transform hover:scale-105 cursor-pointer" %>
        </div>
      <% end %>

      <!-- Decorative Divider -->
      <div class="flex items-center my-6">
        <div class="flex-1 border-t-2 border-gray-200"></div>
        <span class="px-3 text-xl">ğŸ</span>
        <div class="flex-1 border-t-2 border-gray-200"></div>
      </div>

      <div class="text-center">
        <p class="text-gray-600">
          Already have an account?
          <%= link_to new_session_path, class: "text-green-700 font-bold hover:text-green-800 hover:underline transition-all" do %>
            Sign in ğŸ…
          <% end %>
        </p>
      </div>
    </div>

    <!-- Footer Message -->
    <div class="text-center mt-6">
      <p class="text-gray-500 text-sm">âœ¨ Join thousands spreading holiday cheer ğŸ„</p>
    </div>
  </div>
</div>
