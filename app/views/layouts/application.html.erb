<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>Secret Santa</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-gray-50">
    <div class="flex flex-col h-full">
      <!-- Flash Messages -->
      <% if alert.present? %>
        <div class="bg-red-500 text-white px-4 py-3 text-center text-sm font-medium">
          <%= alert %>
        </div>
      <% end %>
      <% if notice.present? %>
        <div class="bg-green-500 text-white px-4 py-3 text-center text-sm font-medium">
          <%= notice %>
        </div>
      <% end %>

      <!-- Main Content -->
      <main class="flex-1 overflow-y-auto pb-20">
        <%= yield %>
      </main>

      <!-- Bottom Navigation (Mobile) -->
      <% if current_user.present? %>
        <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg">
          <div class="flex justify-around items-center h-16">
            <%= link_to home_path, class: "flex flex-col items-center justify-center flex-1 text-gray-600 hover:text-red-600 transition-colors #{current_page?(home_path) ? 'text-red-600' : ''}" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span class="text-xs mt-1 font-medium">Home</span>
            <% end %>

            <%= link_to events_path, class: "flex flex-col items-center justify-center flex-1 text-gray-600 hover:text-red-600 transition-colors #{current_page?(events_path) ? 'text-red-600' : ''}" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-xs mt-1 font-medium">Events</span>
            <% end %>

            <%= link_to new_event_path, class: "flex flex-col items-center justify-center flex-1 -mt-6" do %>
              <div class="bg-red-600 rounded-full p-3 shadow-lg hover:bg-red-700 transition-colors">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
              </div>
              <span class="text-xs mt-1 font-medium text-gray-600">Create</span>
            <% end %>

            <%= link_to friends_path, class: "flex flex-col items-center justify-center flex-1 text-gray-600 hover:text-red-600 transition-colors #{current_page?(friends_path) || current_page?(friend_requests_path) ? 'text-red-600' : ''}" do %>
              <div class="relative">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <% if pending_friend_requests_count > 0 %>
                  <span class="absolute -top-1 -right-1 bg-red-600 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center font-bold"><%= pending_friend_requests_count %></span>
                <% end %>
              </div>
              <span class="text-xs mt-1 font-medium">Friends</span>
            <% end %>

            <%= link_to session_path, method: :delete, data: {turbo_method: :delete}, class: "flex flex-col items-center justify-center flex-1 text-gray-600 hover:text-red-600 transition-colors" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <span class="text-xs mt-1 font-medium">Logout</span>
            <% end %>
          </div>
        </nav>
      <% end %>
    </div>
  </body>
</html>
