<div class="min-h-screen bg-gray-50 pb-20">
  <!-- Header -->
  <div class="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-4">
    <div class="flex items-center justify-between">
      <%= link_to @event, class: "flex items-center" do %>
        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="text-xl font-bold flex-1">Add Participant</h1>
    </div>
  </div>

  <!-- Event Name -->
  <div class="bg-white border-b border-gray-200 px-6 py-3">
    <p class="text-sm text-gray-600">Adding to event:</p>
    <p class="font-bold text-gray-800"><%= @event.name %></p>
  </div>

  <!-- Search Input -->
  <div class="px-4 py-4 bg-white border-b border-gray-200 sticky top-0 z-10">
    <input type="text"
           id="search-input"
           placeholder="Search by name or username..."
           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
           autocomplete="off">
  </div>

  <!-- User List -->
  <div class="px-4 py-4">
    <% if @available_users.any? %>
      <div class="bg-white rounded-lg shadow">
        <% @available_users.each do |user| %>
          <%= form_with url: event_participants_path(@event), method: :post, class: "user-item border-b border-gray-100 last:border-b-0" do |f| %>
            <%= hidden_field_tag :username, user.username %>
            <button type="submit" class="w-full px-4 py-4 hover:bg-gray-50 active:bg-gray-100 transition-colors text-left">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center text-white text-lg font-bold mr-3">
                  <%= user.name.first.upcase %>
                </div>
                <div>
                  <div class="font-medium text-gray-800"><%= user.name %></div>
                  <div class="text-sm text-gray-500">@<%= user.username %></div>
                </div>
              </div>
            </button>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <p class="text-gray-600">All users are already participants!</p>
      </div>
    <% end %>

    <!-- Create New User Section -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-blue-600 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="text-sm text-blue-800">
          <strong>Don't see who you're looking for?</strong><br/>
          Type their username in the search box above and press Enter to create a new account and add them!
        </div>
      </div>
    </div>

    <!-- Create form (for when typing new username) -->
    <%= form_with url: event_participants_path(@event), method: :post, id: "create-user-form", class: "hidden" do |f| %>
      <%= text_field_tag :username, nil, id: "hidden-username-input" %>
    <% end %>
  </div>
</div>

<script>
(function() {
  const searchInput = document.getElementById('search-input');
  const userItems = document.querySelectorAll('.user-item');
  const createForm = document.getElementById('create-user-form');
  const hiddenInput = document.getElementById('hidden-username-input');

  // Filter users as you type
  searchInput.addEventListener('input', function() {
    const term = this.value.toLowerCase();

    userItems.forEach(item => {
      const button = item.querySelector('button');
      const name = button.querySelector('.font-medium').textContent.toLowerCase();
      const username = button.querySelector('.text-sm').textContent.toLowerCase();

      if (name.includes(term) || username.includes(term)) {
        item.classList.remove('hidden');
      } else {
        item.classList.add('hidden');
      }
    });
  });

  // Press Enter to create new user
  searchInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      const username = this.value.trim();
      if (username) {
        hiddenInput.value = username;
        createForm.requestSubmit();
      }
    }
  });
})();
</script>
